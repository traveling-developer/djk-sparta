    "version": "0.2.0",
    "configurations": [
        {
            "name": "Data generation",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/club-data-generator/index.ts",
            "cwd": "${workspaceFolder}/club-data-generator",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.ts"
            ]
        },
        {
            "command": "${workspaceFolder}/website/node_modules/.bin/astro dev",
            "name": "Dev server",
            "request": "launch",
            "type": "node-terminal"
        }
    ]
}