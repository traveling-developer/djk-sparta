---
interface Props {
  title?: string;
  body?: string;
  link?: string;
  category?: string;
}

const { link, title, body, category } = Astro.props;
---

<div
  class="card bg-spartaGray w-[350px] text-white shadow-md shadow-gray-400 sm:w-[24rem]"
>
  <div class="card-body">
    <h2 class="card-title">
      {category === "table-tennis" && "🏓 "}
      {category === "soccer" && "⚽ "}
      {category === "general" && "🤝 "}
      {category === "health-sport" && "🧘‍♀️ "}
      {category === "indiaca" && "🪶 "}
      {category === "tennis" && "🎾 "}
      {title}
    </h2>
    <p>
      {body}
    </p>
    <div class="card-actions mt-4 justify-center">
      <a
        href={link}
        class="btn btn-outline hover:border-spartaRed hover:bg-spartaRed transition duration-300 ease-in-out hover:-translate-y-1 hover:text-white"
        >weiterlesen</a
      >
    </div>
  </div>
</div>
