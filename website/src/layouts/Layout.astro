---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="DJK Sparta Noris Nürnberg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/sparta_rw.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>DJK Sparta Noris Nürnberg - {title}</title>
	</head>
	<body>
		<div class="flex flex-col min-h-screen">
			<Navbar />
			<div class="flex-grow">
				<slot />
			</div>
			<Footer />
		</div>
	</body>
</html>
