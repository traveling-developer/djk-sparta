---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import ContactCard from "../components/ContactCard.astro";
import SectionHeader from "../components/SectionHeader.astro";
import TeamCard from "../components/soccer/TeamCard.astro";

import soccerImage from "../assets/soccer.webp";
import contactImage from "../assets/contact.webp";
import teamImage from "../assets/team.webp";

import { getTeams } from "../lib/soccer/teams";
var teams = await getTeams(true);
---

<Layout title="Fußball">
  <main>
    <Header title="Fußball - Junioren" imageMetadata={soccerImage} />

    <div class="mt-5 mb-10 flex flex-wrap justify-center gap-6">
      <div
        class="card bg-spartaGray w-72 text-white shadow-md shadow-gray-400 sm:w-[34rem]"
      >
        <div class="card-body">
          <h2 class="card-title">Trainingszeiten</h2>
          <p>
            Bambini <br /> Montag 17:15 - 17:45 Uhr
          </p>
          <p>
            G-Jugend <br /> Montag 18:00 - 19:00 Uhr
          </p>
          <p>F1-Jugend <br /> Montag & Mittwoch 17:00 - 18:30 Uhr</p>
          <p>F2-Jugend <br /> Montag & Freitag 17:30 - 19:00 Uhr</p>
          <p>
            E1-Jugend <br /> Dienstag & Donnerstag 17:00 - 18:30 Uhr
          </p>
          <p>
            E2-Jugend <br /> Dienstag & Donnerstag 17:00 - 18:30 Uhr
          </p>
          <p>
            D-Jugend <br /> Dienstag 17:30 - 19:00 & Freitag 16:00 - 17:30 Uhr
          </p>
          <p>A-Jugend <br /> Montag & Mittwoch 19:00 - 20:30 Uhr</p>
        </div>
      </div>
    </div>

    <div>
      <SectionHeader title="Mannschaften" imageMetadata={teamImage} />

      <div class="mt-5 mb-10 flex flex-wrap justify-center gap-6">
        {
          teams.map((team) => (
            <TeamCard
              name={team.name}
              league={team.league}
              rank={team.rank}
              goalDifference={team.goalDifference}
              link={team.link}
            />
          ))
        }
      </div>
    </div>

    <div>
      <SectionHeader title="Kontakt" imageMetadata={contactImage} />

      <div class="mt-5 mb-10 flex flex-wrap justify-center gap-6">
        <ContactCard
          title="Robert Scherret (Jugendleiter)"
          mobile="015207115488"
        />
      </div>
    </div>
  </main>
</Layout>
