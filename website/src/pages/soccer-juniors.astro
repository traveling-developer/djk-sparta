---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import ContactCard from "../components/ContactCard.astro";
import SectionHeader from "../components/SectionHeader.astro";
import TeamCard from "../components/soccer/TeamCard.astro";

import soccerImage from "../assets/soccer.webp";
import contactImage from "../assets/contact.webp";
import teamImage from "../assets/team.webp";

import { getTeams } from "../lib/soccer/teams";
var teams = await getTeams(true);
---

<Layout title="Fußball">
    <main>
        <Header title="Fußball - Junioren" imageMetadata={soccerImage} />

        <div class="flex flex-wrap justify-center gap-6 mb-10 mt-5">
            <div
                class="w-72 sm:w-[34rem] card bg-spartaGray text-white shadow-md shadow-gray-400"
            >
                <div class="card-body">
                    <h2 class="card-title">Trainingszeiten</h2>
                    <p>
                        Bambini / G-Jugend <br /> Montag 17:30 - 18:30 Uhr
                    </p>
                    <p>F-Jugend <br /> Montag & Mittwoch 17:00 - 18:30 Uhr</p>
                    <p>
                        E1-Jugend <br /> Dienstag 17:30 - 18:30 Uhr & Freitag 16:00
                        - 17:30 Uhr
                    </p>
                    <p>
                        E2-Jugend <br /> Dienstag 17:30 - 19:00 Uhr & Donnerstag
                        17:00 - 18:30 Uhr
                    </p>
                    <p>
                        D-Jugend <br /> Dienstag & Donnerstag 17:30 - 19:00 Uhr
                    </p>
                    <p>
                        C-Jugend <br />Dienstag & Donnerstag 17:30 - 19:00 Uhr
                    </p>
                    <p>B-Jugend <br /> Montag & Mittwoch 17:30 - 19:00 Uhr</p>
                </div>
            </div>
        </div>

        <div>
            <SectionHeader title="Mannschaften" imageMetadata={teamImage} />

            <div class="flex flex-wrap justify-center gap-6 mb-10 mt-5">
                {
                    teams.map((team) => (
                        <TeamCard
                            name={team.name}
                            league={team.league}
                            rank={team.rank}
                            goalDifference={team.goalDifference}
                            link={team.link}
                        />
                    ))
                }
            </div>
        </div>

        <div>
            <SectionHeader title="Kontakt" imageMetadata={contactImage} />

            <div class="flex flex-wrap justify-center gap-6 mb-10 mt-5">
                <ContactCard title="TBD (1. Abteilungsleiter)" mail="..." />
                <ContactCard title="TBD (2. Abteilungsleiter)" mail="..." />
            </div>
        </div>
    </main>
</Layout>
